import { Collapsible, CollapsibleTrigger, CollapsibleContent, Primitive } from "ripple-primitives";
import styles from './collapsible.stories.module.css';
import { track } from "ripple";
export default { title: 'Components/Collapsible' };

export component Styled(){
    <Collapsible class={styles.root}>
        <CollapsibleTrigger class={styles.trigger}>{"Trigger"}</CollapsibleTrigger>
        <CollapsibleContent class={styles.content}>{"Content 1"}</CollapsibleContent>
    </Collapsible>
}

export component Controlled(){
    const open = track(true);

    <Collapsible class={styles.root} open={@open} onOpenChange={o => @open = o} >
        <CollapsibleTrigger class={styles.trigger}>
            {@open ? 'close' : 'open'}
        </CollapsibleTrigger>
        <CollapsibleContent class={styles.content} asChild>
            component children(childProps) {
                <article {...childProps}>{"Content 1"}</article>
            }
        </CollapsibleContent>
    </Collapsible>
}

export component Animated() {
    <h1>{"Closed by default"}</h1>
    <Collapsible class={styles.root}>
        <CollapsibleTrigger class={styles.trigger}>{"Trigger"}</CollapsibleTrigger>
        <CollapsibleContent class={styles.animatedContent}>
            <Primitive.div style={{ paddingTop: 10, paddingBottom: 10 }}>{"Content 1"}</Primitive.div>
        </CollapsibleContent>
    </Collapsible>

    <h1>{"Open by default"}</h1>
    <Collapsible class={styles.root} defaultOpen>
        <CollapsibleTrigger class={styles.trigger}>{"Trigger"}</CollapsibleTrigger>
        <CollapsibleContent class={styles.animatedContent}>
            <Primitive.div style={{ paddingTop: 10, paddingBottom: 10 }}>{"Content 1"}</Primitive.div>
        </CollapsibleContent>
    </Collapsible>
}

