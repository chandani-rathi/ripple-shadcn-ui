import { track } from 'ripple';
import styles from './toggle-group.stories.module.css';
import { ToggleGroup, ToggleGroupItem, DirectionProvider } from "ripple-primitives"

export default {
  title: 'Components/ToggleGroup',
};

export component Single(){
    const value = track("2");
    <h1>{"Uncontrolled"}</h1>
      <ToggleGroup type="single" class={styles.root} aria-label="Options" defaultValue="3">
        <ToggleGroupItem value="1" class={styles.item}>
          {"Option 1"}
        </ToggleGroupItem>
        <ToggleGroupItem value="2" class={styles.item}>
          {"Option 2"}
        </ToggleGroupItem>
        <ToggleGroupItem value="3" class={styles.item}>
          {"Option 3"}
        </ToggleGroupItem>
      </ToggleGroup>

      <h1>{"Controlled"}</h1>
      <ToggleGroup
        type="single"
        class={styles.root}
        aria-label="Options"
        value={@value}
        onValueChange={(v) => @value = v}
      >
        <ToggleGroupItem value="1" class={styles.item}>
          {"Option 1"}
        </ToggleGroupItem>
        <ToggleGroupItem value="2" class={styles.item}>
          {"Option 2"}
        </ToggleGroupItem>
        <ToggleGroupItem value="3" class={styles.item}>
          {"Option 3"}
        </ToggleGroupItem>
      </ToggleGroup>
}

