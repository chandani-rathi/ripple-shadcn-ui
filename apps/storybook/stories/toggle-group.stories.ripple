export component Multiple(){
    <h1>{"Uncontrolled"}</h1>
      <ToggleGroup type="multiple" class={styles.root} aria-label="Options" defaultValue={['1']}>
        <ToggleGroupItem value="1" class={styles.item}>
          {"Option 1"}
        </ToggleGroupItem>
        <ToggleGroupItem value="2" class={styles.item}>
          {"Option 2"}
        </ToggleGroupItem>
        <ToggleGroupItem value="3" class={styles.item}>
          {"Option 3"}
        </ToggleGroupItem>
      </ToggleGroup>

      
    const value = track([]);
    <h1>{"Controlled"}</h1>
      <ToggleGroup
        type="multiple"
        class={styles.root}
        aria-label="Options"
        value={@value}
        onValueChange={(v) => @value = v}
      >
        <ToggleGroupItem value="1" class={styles.item}>
          {"Option 1"}
        </ToggleGroupItem>
        <ToggleGroupItem value="2" class={styles.item}>
          {"Option 2"}
        </ToggleGroupItem>
        <ToggleGroupItem value="3" class={styles.item}>
          {"Option 3"}
        </ToggleGroupItem>
      </ToggleGroup>
}

