import { Primitive } from '@ripple-primitives/primitive-ui';
import { track } from 'ripple';

const NAME = 'Arrow';

export component Arrow({ children, width = 10, height = 5, ...arrowProps }) {
	const ArrowChildren = track(() => children);
	<Primitive.svg {...arrowProps} {width} {height} viewBox="0 0 30 10" preserveAspectRatio="none">
		if (arrowProps.asChild) {
			<@ArrowChildren />
		} else {
			<polygon points="0,0 30,0 15,10" />
		}
	</Primitive.svg>
}
