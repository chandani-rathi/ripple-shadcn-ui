import { Context } from "ripple"
type Direction = 'ltr' | 'rtl';
const DirectionContext = new Context<Direction | undefined>(undefined);

export function useDirection(localDir?: Direction) {
  const globalDir = DirectionContext.get();
  return localDir || globalDir || 'ltr';
}

export function setDirection(dir?: Direction){
  DirectionContext.set(dir)
}

export component DirectionProvider({
  dir = "ltr",
  children
}){
  DirectionContext.set(dir);
  <@children />
}