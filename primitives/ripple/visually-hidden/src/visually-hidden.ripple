import { Primitive } from "@ripple-primitives/primitive-ui"
const NAME = 'VisuallyHidden';

/* -------------------------------------------------------------------------------------------------
 * VisuallyHidden
 * -----------------------------------------------------------------------------------------------*/
const VISUALLY_HIDDEN_STYLES = Object.freeze({
  // See: https://github.com/twbs/bootstrap/blob/main/scss/mixins/_visually-hidden.scss
  position: 'absolute',
  border: 0,
  width: 1,
  height: 1,
  padding: 0,
  margin: -1,
  overflow: 'hidden',
  clip: 'rect(0, 0, 0, 0)',
  whiteSpace: 'nowrap',
  wordWrap: 'normal',
})

export component VisuallyHidden(props){
  <Primitive.span
    {...props}
    style={{ ...VISUALLY_HIDDEN_STYLES, ...props.style }}
  ></Primitive.span>
}