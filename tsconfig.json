{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"jsxImportSource": "ripple",
		"noEmit": true,
		"isolatedModules": true,
		"paths": {
			"@/*": ["registry/new-york/*"],
			"@ripple-primitives/toggle" : ["primitives/ripple/toggle/src"],
			"@ripple-primitives/primitive-ui" : ["primitives/ripple/primitive/src"],
			"@ripple-primitives/accessible-icon" : ["primitives/ripple/accessible-icon/src"],
			"@ripple-primitives/visually-hidden" : ["primitives/ripple/visually-hidden/src"]
		}
	}
}
